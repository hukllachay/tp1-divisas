<%- include('templates/header'); -%>

<main class="formulario-cambio">
    <div class="paso-descripcion container text-center">
        <h1>Paso 1/3: </h1>
        <p> <%-data.title-%> </p>
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn active">1</button>
            <button type="button" class="btn">2</button>
            <button type="button" class="btn">3</button>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="formulario col-sm-12 col-md-6 col-xl-4 text-left">
            <form action="">
                <div class="form-group ">
                    <label for="banco" class="text-left">Seleccione el banco de origen de tu dinero</label>
                    <select class="form-control" id="banco">
                        <% data.bancos.forEach(function(banco) { %>
                            <option value="<%= banco.id %>"><%= banco.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="cuentaAhorros">Seleccione el origen de tus fondos</label>
                    <select class="form-control" id="cuentaOrigen">
                        <% data.cuentasBancarias.forEach(function(cuentaBancaria) { %>
                            <option value="<%= cuentaBancaria.id %>"><%= cuentaBancaria.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="origenFondos">Seleccione la cuenta en la que recibiras tu dinero</label>
                    <select class="form-control" id="origenDestino">
                        <% data.cuentasBancarias.forEach(function(cuentaBancaria) { %>
                            <option value="<%= cuentaBancaria.id %>"><%= cuentaBancaria.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="solesInput">Soles</label>
                    <input type="text" class="form-control" id="solesInput">
                </div>
                <div class="d-grid gap-2 ">
                    <button class="cambio btn btn-light" type="button"><i class="fas fa-sync-alt"></i></button>
                </div>
                <div class="form-group">
                    <label for="dolaresInput">Dolares</label>
                    <input type="text" class="form-control" id="dolaresInput">
                </div>
                <div class="h6 text-center">Tipo de cambio del d√≠a: S/. <%-data.ratio-%></div>
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-light btn-continuar">Continuar <i class="far fa-hand-point-right"></i></button>
                </div>

            </form>
        </div>
    </div>
</main>

<script>
    let ratio = /<%-data.ratio-%>/.source;
    let solesInput = document.getElementById("solesInput");
    let dolaresInput = document.getElementById("dolaresInput");
  
    document.addEventListener('keyup', function(){
      dolaresInput.value = Math.round((solesInput.value * ratio) * 100) / 100;
    });

    
</script>

<%- include('templates/footer'); -%>